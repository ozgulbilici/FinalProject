<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19FF9800"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtApppNameView"
        android:layout_width="185dp"
        android:layout_height="47dp"
        android:text="Rem!nd-Me"
        android:textAlignment="center"
        android:textColor="#0097A7"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goToLogin"
        android:layout_width="251dp"
        android:layout_height="53dp"
        android:layout_marginTop="85dp"
        android:background="#B9FF5722"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgView" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="144dp"
        android:layout_height="145dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mobilicon3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goToSignUp"
        android:layout_width="251dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="#56FF5722"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToLogin"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>